<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context="com.sdacademy.zientara.rafal.awesomeapp.fragments.ExplorerFragment">

    <TextView
        android:id="@+id/explorerFragment_filePathText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/medium_padding"
        android:textColor="@color/colorPrimaryDark"
        android:text="@string/hello_blank_fragment" />

    <android.support.v7.widget.RecyclerView
        android:layout_above="@+id/explorerFragment_filePathText"
        android:id="@+id/explorerFragment_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/explorerFragment_filePathText" />

</RelativeLayout>
