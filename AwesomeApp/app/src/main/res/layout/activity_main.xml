<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/mainActivity_rootView"
    tools:context="com.sdacademy.zientara.rafal.awesomeapp.MainActivity">

    <FrameLayout
        android:id="@+id/mainActivity_fragmentFirstContainer"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <FrameLayout
        android:id="@+id/mainActivity_fragmentSecondContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/secondFragmentBackground"
        android:layout_below="@+id/mainActivity_fragmentFirstContainer" />

</RelativeLayout>
