<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainActivity_rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/big_padding"
    tools:context="com.sdacademy.zientara.rafal.awesomeapp.MainActivity">

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/medium_padding"
        android:text="Choose color!"
        android:textSize="24sp" />

    <Button
        android:id="@+id/mainActivity_buttonRed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/redBackground"
        android:text="Red" />

    <Button
        android:id="@+id/mainActivity_buttonBlue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blueBackground"
        android:text="Blue" />

    <Button
        android:id="@+id/mainActivity_buttonGreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/greenBackground"
        android:text="Green" />

</LinearLayout>
